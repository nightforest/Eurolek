header.header
    .container.header__container
        .logo.header__logo
            a.logo__link(href="#" aria-label="logo")
                img.logo__img(src="img/logo.svg" width="132" height="74" alt="logo")

        nav.menu.header__menu
            ul.menu__list
                li.menu__item
                    a.menu__link.is-active(href="#") Продукція
                li.menu__item
                    a.menu__link(href="#") Послуги
                li.menu__item.is-dropdown
                    a.menu__link.is-dropdown__toggle(href="#") Про компанію
                        svg.menu__arrow(width="12" height="8")
                            use(xlink:href="img/sprite.svg#arrow-down")

                    ul.menu__sub.is-dropdown__menu
                        li.menu__sub-item
                            a.menu__sub-link(href="#") Про нас
                        li.menu__sub-item
                            a.menu__sub-link(href="#") Каталог (PDF)
                        li.menu__sub-item
                            a.menu__sub-link(href="#" data-modal="modal-login") Вхід для співробітників
                li.menu__item
                    a.menu__link(href="#") Фармаконагляд

        a.header__phone(href="tel:+380442332557")
            svg.header__phone-icon(width="16" height="16")
                use(xlink:href="img/sprite.svg#phone")
            span (044) 233 25 57

        nav.actions.header__actions
            ul.actions__list
                li.actions__item.actions__item--visible-xl
                    button.actions__button(type="button" aria-label="Show phone")
                        svg.actions__icon(width="25" height="25")
                            use(xlink:href="img/sprite.svg#phone")

                    .actions__phone.actions__dropdown
                        a.actions__phone-link(href="tel:+380442332557") (044) 233 25 57

                li.actions__item
                    button.actions__button(type="button" aria-label="Show work time")
                        svg.actions__icon(width="27" height="26")
                            use(xlink:href="img/sprite.svg#clock")
                    
                    .work-time.actions__dropdown
                        svg.work-time__icon(width="47" height="46")
                            use(xlink:href="img/sprite.svg#clock")

                        h3.work-time__title Графік роботи

                        .work-time__text
                            p ПН-ЧТ: 9.00-18.00
                            p ПТ: 9.00-17.30
                            p CБ-ВС: Вихідний

                li.actions__item
                    button.actions__button(type="button" aria-label="Show search")
                        svg.actions__icon(width="25" height="25")
                            use(xlink:href="img/sprite.svg#search")
                    
                    form.search-form.actions__dropdown
                        input.search-form__input(type="text" name="searchFormInput" placeholder="" autocomplete="off" required)
                        button.search-form__button(type="button" aria-label="Search")
                            svg.search-form__icon(width="25" height="25")
                                use(xlink:href="img/sprite.svg#search")
        
        .lang.header__lang
            button.lang__toggle(type="button" aria-label="Choose language") UA
                svg.lang__toggle-icon(width="12" height="8")
                    use(xlink:href="img/sprite.svg#arrow-down")

            ul.lang__dropdown
                li.lang__item
                    a.lang__link(href="#") EN
                li.lang__item
                    a.lang__link(href="#") GR

        button.burger.header__right-menu(type="button" aria-label="Open right menu" aria-expanded="false" data-right-toggle)
            .burger__line
            .burger__line
            .burger__line

        button.burger.header__mobile-menu(type="button" aria-label="Open mobile menu" aria-expanded="false" data-nav-toggle)
            .burger__line
            .burger__line
            .burger__line