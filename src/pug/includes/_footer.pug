footer.footer
    .container.footer__container-top
        .logo.footer__logo
            a.logo__link(href="#" aria-label="logo")
                img.logo__img(src="img/logo.svg" width="132" height="74" alt="logo")

        address.social.footer__social
            ul.social__list
                li.social__item
                    a.social__link.social__link--phone(href="#")
                        svg.social__icon(width="21" height="21")
                            use(xlink:href="img/sprite.svg#phone")
                li.social__item
                    a.social__link.social__link--facebook(href="#")
                        svg.social__icon(width="12" height="23")
                            use(xlink:href="img/sprite.svg#facebook")
                li.social__item
                    a.social__link.social__link--youtube(href="#")
                        svg.social__icon(width="22" height="15")
                            use(xlink:href="img/sprite.svg#youtube")
                li.social__item
                    a.social__link.social__link--telegram(href="#")
                        svg.social__icon(width="18" height="16")
                            use(xlink:href="img/sprite.svg#telegram")
                li.social__item
                    a.social__link.social__link--linkedin(href="#")
                        svg.social__icon(width="15" height="15")
                            use(xlink:href="img/sprite.svg#linkedin")

    .footer__bottom
        .container.footer__container-middle
            nav.footer-menu
                ul.footer-menu__list
                    li.footer-menu__item
                        a.footer-menu__link(href="#") Продукція
                    li.footer-menu__item
                        a.footer-menu__link(href="#") Чому ми
                    li.footer-menu__item.is-dropdown
                        a.footer-menu__link.is-dropdown__toggle(href="#") Про компанію
                            svg.footer-menu__arrow(width="8" height="5")
                                use(xlink:href="img/sprite.svg#arrow-down")

                        ul.footer-menu__sub.is-dropdown__menu
                            li.footer-menu__sub-item
                                a.footer-menu__sub-link(href="#") Про нас
                            li.footer-menu__sub-item
                                a.footer-menu__sub-link(href="#") Каталог (PDF)
                            li.footer-menu__sub-item
                                a.footer-menu__sub-link(href="#") Вхід для співробітників

                    li.footer-menu__item
                        a.footer-menu__link(href="#") Фармаконагляд
                    li.footer-menu__item
                        a.footer-menu__link(href="#") Вакансії
                    li.footer-menu__item
                        a.footer-menu__link(href="#") Партнери
                    li.footer-menu__item.is-dropdown
                        a.footer-menu__link.is-dropdown__toggle(href="#") Професіоналам
                            svg.footer-menu__arrow(width="8" height="5")
                                use(xlink:href="img/sprite.svg#arrow-down")

                        ul.footer-menu__sub.is-dropdown__menu
                            li.footer-menu__sub-item
                                a.footer-menu__sub-link(href="#") Публікації
                            li.footer-menu__sub-item
                                a.footer-menu__sub-link(href="#") Спеціальна пропозиція для клінік

                    li.footer-menu__item
                        a.footer-menu__link(href="#") Новини
                    li.footer-menu__item
                        a.footer-menu__link(href="#") Контакти

        .container.footer__container-bottom
            .footer__dev Розробка сайту 
                a.footer__dev-link(href="#")
                    img.footer__dev-img(src="img/shafem.svg" width="90" height="20" alt="shafem logo")

