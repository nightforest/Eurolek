                    li.about-block__item.animation-down
                        .about-block__pic
                            svg.about-block__icon(width="70" height="81")
                                use(xlink:href="img/sprite.svg#about-2")
                        h3.about-block__title Гнучкість та мобільність
                    li.about-block__item.animation-down
                        .about-block__pic
                            svg.about-block__icon(width="77" height="60")
