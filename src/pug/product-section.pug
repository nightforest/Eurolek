section.product-section
    .container.product-section__container
        nav.breadcrumbs.animation-down(aria-label="breadcrumb")
            ul.breadcrumbs__list
                li.breadcrumbs__item
                    a.breadcrumbs__link(href="#") Головна
                li.breadcrumbs__item
                    a.breadcrumbs__link(href="#") Продукція
                li.breadcrumbs__item(aria-current="page") РЕСПИКС®

        h2.section-title.product-section__title.animation-down РЕСПИКС®

        .product-section__inner
            .product-section__col.animation-down
                .swiper.product-slider
                    .swiper-wrapper
                        .swiper-slide.product-slider__slide
                            picture.product-slider__picture
                                img.product-slider__img(src="img/product-img-big.webp" srcset="img/product-img-big@2x.webp 2x" loading="lazy" width="388" height="304"  alt="alt")
                        
                        .swiper-slide.product-slider__slide
                            picture.product-slider__picture
